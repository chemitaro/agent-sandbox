# Global package installation directory
prefix=/usr/local/share/npm-global

# Use package-lock.json for reproducible builds
package-lock=true

# Enable long semver range matching
save-exact=false

# Security and audit settings
audit-level=high
fund=false

# Optimize for Docker builds
cache=/home/node/.npm/_cache
prefer-offline=true

# Logging level
loglevel=warn

# Registry settings (use default npm registry)
registry=https://registry.npmjs.org/

# Timeout settings for network operations
fetch-timeout=300000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000