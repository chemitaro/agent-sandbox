{
  "name": "sandbox-environment",
  "version": "1.0.0",
  "description": "セキュアで隔離されたDocker環境での開発作業用ツールセット",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@openai/codex": "latest",
    "@anthropic-ai/claude-code": "latest",
    "@google/gemini-cli": "latest",
    "@sasazame/ccresume": "latest"
  },
  "scripts": {
    "install-global": "npm install -g @google/gemini-cli @sasazame/ccresume @openai/codex",
    "verify": "claude --version && gemini --version && npx -y @openai/codex --version"
  },
  "keywords": [
    "docker",
    "development-environment",
    "gemini-cli",
    "codex-cli",
    "sandbox"
  ],
  "author": "sandbox-project",
  "license": "MIT"
}
