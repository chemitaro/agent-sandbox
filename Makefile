# Sandbox Project Makefile
# ========================

# Configuration
CONFIG_FILE := sandbox.config
ENV_FILE := .env

# Dynamic values
CURRENT_DIR := $(shell pwd)
CURRENT_USER := $(shell whoami)
GIT_ROOT := $(shell git rev-parse --show-toplevel 2>/dev/null || echo $(CURRENT_DIR))

# Include .env if it exists
-include $(ENV_FILE)

# Default values
SOURCE_PATH ?= $(HOME)/workspace/product

# Export environment variables for Docker Compose
export HOST_SANDBOX_PATH := $(GIT_ROOT)
export HOST_USERNAME := $(CURRENT_USER)
export SOURCE_PATH
export TZ

# Detect timezone
.PHONY: detect-timezone
detect-timezone:
	@if [ -n "$$TZ" ]; then \
		echo "$$TZ"; \
	elif [ -L /etc/localtime ]; then \
		readlink /etc/localtime | sed 's|.*/zoneinfo/||'; \
	elif [ -f /etc/timezone ]; then \
		cat /etc/timezone; \
	elif command -v timedatectl >/dev/null 2>&1; then \
		timedatectl | grep "Time zone" | awk '{print $$3}'; \
	else \
		echo "Asia/Tokyo"; \
	fi

# Get detected timezone
DETECTED_TZ := $(shell \
	if [ -n "$$TZ" ]; then \
		echo "$$TZ"; \
	elif [ -L /etc/localtime ]; then \
		readlink /etc/localtime | sed 's|.*/zoneinfo/||'; \
	elif [ -f /etc/timezone ]; then \
		cat /etc/timezone; \
	elif command -v timedatectl >/dev/null 2>&1; then \
		timedatectl | grep "Time zone" | awk '{print $$3}'; \
	else \
		echo "Asia/Tokyo"; \
	fi)
export TZ := $(DETECTED_TZ)

# Generate .env file
.PHONY: generate-env
generate-env:
	@echo "ğŸ”§ Generating .env file..."
	@if [ ! -f $(CONFIG_FILE) ]; then \
		echo "âŒ Error: $(CONFIG_FILE) not found!"; \
		echo "ğŸ“ Please create it from sandbox.config.example:"; \
		echo "   cp sandbox.config.example sandbox.config"; \
		exit 1; \
	fi
	@echo "# Auto-generated by Makefile - DO NOT EDIT" > $(ENV_FILE)
	@echo "# Generated at: $$(date)" >> $(ENV_FILE)
	@echo "" >> $(ENV_FILE)
	@echo "# User Configuration" >> $(ENV_FILE)
	@# ã™ã¹ã¦ã®ç’°å¢ƒå¤‰æ•°ã‚’æŠ½å‡ºï¼ˆã‚³ãƒ¡ãƒ³ãƒˆè¡Œã¨ç©ºè¡Œã‚’é™¤å¤–ï¼‰
	@grep -E '^[[:space:]]*[A-Z_][A-Z0-9_]*[[:space:]]*=' $(CONFIG_FILE) | sed 's/[[:space:]]*=[[:space:]]*/=/' >> $(ENV_FILE) || true
	@# TZãŒè¨­å®šã•ã‚Œã¦ã„ãªã„å ´åˆã¯è‡ªå‹•æ¤œå‡ºå€¤ã‚’ä½¿ç”¨
	@if ! grep -q "^TZ=" $(ENV_FILE); then \
		echo "TZ=$(DETECTED_TZ)" >> $(ENV_FILE); \
	fi
	@echo "" >> $(ENV_FILE)
	@echo "# Auto-detected Values" >> $(ENV_FILE)
	@echo "HOST_SANDBOX_PATH=$(GIT_ROOT)" >> $(ENV_FILE)
	@echo "HOST_USERNAME=$(CURRENT_USER)" >> $(ENV_FILE)
	@# SOURCE_PATHã¨åŒã˜å€¤ã‚’HOST_PRODUCT_PATHã«è¨­å®š
	@SOURCE_PATH=$$(grep -E '^[[:space:]]*SOURCE_PATH[[:space:]]*=' $(CONFIG_FILE) | sed 's/^[^=]*=//' | xargs); \
	if [ -n "$$SOURCE_PATH" ]; then \
		echo "HOST_PRODUCT_PATH=$$SOURCE_PATH" >> $(ENV_FILE); \
	fi
	@echo "" >> $(ENV_FILE)
	@echo "âœ… .env file generated successfully!"

# Validate configuration
.PHONY: validate-config
validate-config: generate-env
	@echo "ğŸ” Validating configuration..."
	@if ! grep -q "^SOURCE_PATH=.." $(ENV_FILE); then \
		echo "âŒ Error: Source path is not set in $(CONFIG_FILE)"; \
		echo "   This is a required setting."; \
		exit 1; \
	fi
	@SOURCE_PATH=$$(grep "^SOURCE_PATH=" $(ENV_FILE) | cut -d'=' -f2); \
	if [ ! -d "$$SOURCE_PATH" ]; then \
		echo "âš ï¸  Warning: Source path '$$SOURCE_PATH' does not exist"; \
		echo "   Container will start but the directory will be empty"; \
	fi
	@if ! grep -q "^GH_TOKEN=.." $(ENV_FILE); then \
		echo "â„¹ï¸  Note: GitHub token is not set"; \
		echo "   Some features may be limited"; \
	fi
	@echo "âœ… Configuration is valid!"

# Initialize configuration
.PHONY: init
init:
	@if [ -f $(CONFIG_FILE) ]; then \
		echo "âš ï¸  $(CONFIG_FILE) already exists"; \
	else \
		cp sandbox.config.example $(CONFIG_FILE); \
		echo "âœ… Created $(CONFIG_FILE) from example"; \
		echo "ğŸ“ Please edit $(CONFIG_FILE) with your settings"; \
	fi

# Show current configuration
.PHONY: show-config
show-config: generate-env
	@echo "ğŸ“Š Current Configuration:"
	@echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
	@echo "User Settings (from $(CONFIG_FILE)):"
	@if [ -f $(CONFIG_FILE) ]; then \
		grep -E '^[[:space:]]*[A-Z_][A-Z0-9_]*[[:space:]]*=' $(CONFIG_FILE) | sed 's/=/ = /' || true; \
	else \
		echo "  No configuration file found"; \
	fi
	@echo ""
	@echo "Auto-detected Values:"
	@echo "  Sandbox Path = $(GIT_ROOT)"
	@echo "  Username = $(CURRENT_USER)"
	@echo "  Timezone = $(DETECTED_TZ)"
	@echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"

# Clean generated files
.PHONY: clean-env
clean-env:
	@echo "ğŸ§¹ Removing generated .env file..."
	@rm -f $(ENV_FILE)
	@echo "âœ… Cleaned up"

# Docker Compose Commands (updated)
.PHONY: up
up: validate-config
	@echo "ğŸš€ Starting Claude Code Sandbox..."
	@docker-compose up -d
	@echo "âœ… Container started. Run 'make shell' to connect."

.PHONY: down
down:
	@echo "ğŸ›‘ Stopping Claude Code Sandbox..."
	@docker-compose down

.PHONY: shell
shell:
	@echo "ğŸ”— Connecting to Claude Code Sandbox..."
	@docker-compose exec claude-code-sandbox /bin/zsh

.PHONY: shell-product
shell-product:
	@echo "ğŸ”— Connecting to product directory..."
	@docker-compose exec -w /srv/product claude-code-sandbox /bin/zsh

.PHONY: logs
logs:
	@docker-compose logs -f claude-code-sandbox

.PHONY: restart
restart:
	@echo "ğŸ”„ Restarting Claude Code Sandbox..."
	@docker-compose restart

.PHONY: status
status:
	@echo "ğŸ“Š Container Status:"
	@docker-compose ps

.PHONY: build
build:
	@echo "ğŸ”¨ Building Claude Code Sandbox image..."
	@docker-compose build --no-cache
	@echo "âœ… Build completed."

.PHONY: rebuild
rebuild:
	@echo "ğŸ”„ Rebuilding and restarting Claude Code Sandbox..."
	@docker-compose down
	@docker-compose build --no-cache
	@docker-compose up -d
	@echo "âœ… Container rebuilt and started. Run 'make shell' to connect."

# Claude Assistant (kept from original)
.PHONY: claude
claude:
	@echo "ğŸ¤– Starting Claude session..."
	@claude --dangerously-skip-permissions

# Help command
.PHONY: help
help:
	@echo "Sandbox Project - Available Commands:"
	@echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
	@echo "Configuration:"
	@echo "  make init          - Initialize sandbox.config from example"
	@echo "  make show-config   - Display current configuration"
	@echo "  make validate-config - Validate configuration"
	@echo "  make clean-env     - Remove generated .env file"
	@echo ""
	@echo "Container Management:"
	@echo "  make up            - Start the container (auto-generates .env)"
	@echo "  make down          - Stop the container"
	@echo "  make restart       - Restart the container"
	@echo "  make rebuild       - Rebuild and restart the container"
	@echo "  make status        - Show container status"
	@echo ""
	@echo "Shell Access:"
	@echo "  make shell         - Connect to the container"
	@echo "  make shell-product - Connect directly to /srv/product"
	@echo "  make logs          - View container logs"
	@echo ""
	@echo "Development:"
	@echo "  make claude        - Start Claude Code session"
	@echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"

# Default target
.DEFAULT_GOAL := help